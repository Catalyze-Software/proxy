{
  "canisters": {
    "canister": {
      "type": "custom",
      "package": "canister",
      "candid": "candid/canister.did",
      "wasm": "wasm/canister.wasm.gz",
      "build": [
        "cargo test candid -p canister",
        "cargo build --target wasm32-unknown-unknown --release -p canister"
      ]
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:8080",
      "type": "ephemeral",
      "replica": {
        "subnet_type": "system"
      }
    },
    "ic": {
      "providers": [
        "https://icp0.io"
      ],
      "type": "persistent"
    },
    "staging": {
      "providers": [
        "https://icp0.io"
      ],
      "type": "persistent"
    },
    "development": {
      "providers": [
        "https://icp0.io"
      ],
      "type": "persistent"
    }
  }
}